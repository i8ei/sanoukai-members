---
export interface Props {
  name: string;
  subtitle?: string | null;
  address?: string | null;
  note?: string | null;
}

const { name, subtitle, address, note } = Astro.props;
---

<div class="rounded-xl border border-line bg-card p-5 shadow-card transition-all duration-300 hover:shadow-card-hover hover:-translate-y-0.5">
  <p class="text-lg font-bold text-ink">{name}</p>
  {subtitle && <p class="mt-1 text-base text-ink-soft">{subtitle}</p>}
  {address && <p class="mt-2 text-sm text-ink-soft">{address}</p>}
  {note && (
    <p class="mt-2 text-sm text-ink-soft bg-bg p-2 rounded-md">{note}</p>
  )}
</div>
