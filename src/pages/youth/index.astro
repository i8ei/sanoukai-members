---
import BaseLayout from "../../layouts/BaseLayout.astro";
import SimpleCard from "../../components/SimpleCard.astro";
import { getYouthMembers } from "../../lib/members";

const youthMembers = await getYouthMembers();
---

<BaseLayout
  title="青年会員一覧 | 佐賀県農業法人協会"
  description="佐賀県農業法人協会の青年会員一覧ページ"
>
  <section class="mx-auto max-w-5xl space-y-6">
    <article
      class="rounded-xl border border-line bg-card p-6 shadow-card md:p-8"
    >
      <p class="text-sm font-semibold tracking-widest text-ink-soft uppercase">Youth</p>
      <h1 class="mt-2 text-2xl font-black tracking-tight text-ink md:text-3xl">
        青年会員一覧
      </h1>
      <p class="mt-3 text-base leading-relaxed text-ink-soft">
        佐賀県農業法人協会の次代を担う青年会員のご紹介です。
      </p>
    </article>

    <article class="grid grid-cols-1 gap-4 md:grid-cols-3">
      {youthMembers.map((m) => (
        <SimpleCard
          name={m.name}
          subtitle={m.representative}
          address={m.address}
          note={m.businessSummary}
        />
      ))}
    </article>
  </section>
</BaseLayout>
