---
import BaseLayout from "../../layouts/BaseLayout.astro";
import SimpleCard from "../../components/SimpleCard.astro";
import { getSupportingMembers } from "../../lib/members";

const supporters = await getSupportingMembers();
---

<BaseLayout
  title="賛助会員一覧 | 佐賀県農業法人協会"
  description="佐賀県農業法人協会の賛助会員一覧ページ"
>
  <section class="mx-auto max-w-5xl space-y-6">
    <article
      class="rounded-xl border border-line bg-card p-6 shadow-card md:p-8"
    >
      <p class="text-sm font-semibold tracking-widest text-ink-soft uppercase">Supporters</p>
      <h1 class="mt-2 text-2xl font-black tracking-tight text-ink md:text-3xl">
        賛助会員一覧
      </h1>
      <p class="mt-3 text-base leading-relaxed text-ink-soft">
        当会の活動にご賛同いただき、日頃よりご支援・ご協力をいただいている賛助会員の皆様です。
      </p>
    </article>

    <article class="grid grid-cols-1 gap-4 md:grid-cols-3">
      {supporters.map((s) => (
        <SimpleCard
          name={s.name}
          subtitle={s.type}
          address={s.address}
        />
      ))}
    </article>
  </section>
</BaseLayout>
